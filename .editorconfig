# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.js]
indent_size = 2

[*.json]
indent_size = 2

[*.php]
indent_style = tab

[*.ts]
indent_style = tab

[*.xlf]
indent_style = tab

[*.xml]
indent_style = tab

[*.sql]
indent_style = tab

[makefile]
indent_style = tab
